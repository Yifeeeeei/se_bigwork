<!--index.wxml-->
<view class="container">
  <view class="clubBlock">
    <view class="clublist" wx:for="{{clubNamelist}}">
      <view wx:if="{{index%3==0}}">
        <view bindtap="toClubpage" class="clubarea1" type="primary" data-name="{{item}}">
          <text class="clubName">llllllllllll</text>
          <text class="clubInfo">\n{{item}}\n啦啦啦</text>
        </view>
      </view>
      <view wx:if="{{index%3==1}}">
        <view bindtap="jumptocreate" class="clubarea2" type="primary">
          <text class="clubName">通信尝试</text>
          <text class="clubInfo">\n{{item}}\n查看容器</text>
        </view>
      </view>
      <view wx:if="{{index%3==2}}">
        <view bindtap="jumptocreate" class="clubarea3" type="primary">
          <text class="clubName">通信尝试</text>
          <text class="clubInfo">\n{{item}}\n创建社团</text>
        </view>
      </view>
    </view>
    <view class="clubSpace" bindtap="jumptocreate">
      <image src="/images/greyplus.png" alt="plus_img" class="plus"></image>
      <view class="img_text">创建或加入</view>
    </view>
  </view>
</view>
