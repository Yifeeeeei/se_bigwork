.menu_box{
  width: 100%;
  border-bottom: 2rpx solid #777;
  text-align: center;
  line-height: 80 rpx;
 }
 .menu1,.menu2{
   margin-top: 5px;
   margin-bottom: 5px;
   font-size:38 rpx;
   display:inline-block;
   width:50%;
   color:#777;
 }
 .borders{
  color: #3385ff;
  border-bottom: 5 rpx solid #3385ff;
 }
 .tab1,.tab2{
  height: 100%;
 }
 .clubarea1{
  margin: 10px;
  border-radius: 5%;
  height: 100px;
  width: 200px;
  position: relative;
  background-image: linear-gradient(to bottom right,#8360fa,#cb8dff);
  box-shadow: 0 1px 4px 0 rgba(0,0,0,.1) !important;
  border: 0 !important;
}
