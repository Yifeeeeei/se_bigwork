<!--pages/createddl/createddl.wxml-->
<view class="page-body">
  <view class="page-section">
    <view class="weui-cells__title">ddl标题:</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input"bindinput="nameinput"placeholder="请输入标题"></input>
      </view>
    </view>
  </view>
  <view class="page-section">
    <view class="weui-cells__title">ddl内容:</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <textarea class="textinput"bindinput="contentinput"placeholder="请输入内容"></textarea>
      </view>
      </view>
  </view>

<view class="section">
  <picker mode="date" value="{{date}}" start="2015-09-01" end="2022-09-01" bindchange="bindDateChange">
    <view class="picker">
      请选择截止日期: {{date}}
    </view>
  </picker>
</view>
<view class="section">
  <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeChange">
    <view class="picker">
      请选择截止时间: {{time}}
    </view>
  </picker>
</view>
<button bindtap="sendddl" type="primary"class="sendddl">发送</button>
</view>


